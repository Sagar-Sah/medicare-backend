digraph {
	User [label=User]
	Auth [label="Authentication Service"]
	BotManage [label="Bot Management Service"]
	DB [label=Database]
	Webhook [label="Webhook Listener"]
	API [label="Telegram/Messenger API"]
	OpenAI [label="OpenAI API"]
	Response [label="Response Processor"]
	User -> Auth [label="Register/Login Request"]
	User -> BotManage [label="Bot Creation Request"]
	BotManage -> DB [label="Save Bot Configurations"]
	BotManage -> User [label="Bot Creation Confirmation"]
	API -> Webhook [label="Incoming Message (Webhook)"]
	Webhook -> DB [label="Fetch Bot Context"]
	Webhook -> OpenAI [label="Prepare OpenAI Request"]
	OpenAI -> Webhook [label="Response from OpenAI"]
	Webhook -> Response [label="Process Response"]
	Response -> DB [label="Save Conversation"]
	Response -> API [label="Send Bot Response"]
	API -> User [label="Deliver Bot Response"]
}
