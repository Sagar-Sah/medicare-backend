// Bot Platform Data Flow Diagram
digraph {
	U [label=User]
	T [label="Telegram API"]
	O [label="OpenAI API"]
	P1 [label="User Authentication"]
	P2 [label="Bot Management"]
	P3 [label="Message Handling"]
	P4 [label="Response Generation"]
	DS1 [label=Users]
	DS2 [label=Bots]
	DS3 [label="Knowledge Base"]
	U -> P1 [label="Login/Register"]
	P1 -> DS1 [label="Store User Info"]
	P1 -> P2 [label="Authenticated User"]
	U -> P2 [label="Create/Manage Bot"]
	P2 -> DS2 [label="Store Bot Info"]
	U -> P3 [label="Send Message"]
	P3 -> DS2 [label="Fetch Bot Info"]
	P3 -> DS3 [label="Fetch Knowledge Base"]
	P3 -> P4 [label="Send Message for Response"]
	T -> P3 [label="Receive Message"]
	P3 -> T [label="Send Response"]
	P4 -> O [label="Generate Response"]
	P4 -> T [label="Send Response"]
	P3 -> DS3 [label="Log Message History"]
}
